<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8dp"
    android:id="@+id/categoryItemHolder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/categoryItemClicker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/categoryItemBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/dark_primate_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.palepeak.closet_tracker.SingleListenEditText
        android:id="@+id/categoryName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:background="@android:color/transparent"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Shirts" />

    <ImageView
        android:id="@+id/categoryExpand"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginEnd="16dp"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="@id/categoryName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/categoryName"
        app:srcCompat="@drawable/expand" />

    <TextView
        android:id="@+id/categoryWearsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Default Wears: "
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/categoryItemSize"
        app:layout_constraintTop_toBottomOf="@id/categoryItemSize" />

    <com.palepeak.closet_tracker.SingleListenEditText
        android:id="@+id/categoryWears"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:background="@android:color/transparent"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/categoryWearsLabel"
        app:layout_constraintEnd_toStartOf="@+id/categoryExpand"
        app:layout_constraintStart_toEndOf="@+id/categoryWearsLabel"
        app:layout_constraintTop_toTopOf="@+id/categoryWearsLabel"
        tools:text="5" />

    <TextView
        android:id="@+id/categoryItemSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/categoryWearsLabel"
        app:layout_constraintStart_toEndOf="@id/categoryName"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>